@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container">
    <div class="row align-content-center">
        <div class="col d-flex justify-content-center">
            <div class="login_box">
                <h1 class="title">Log in</h1>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="row flex-column" style="margin-bottom: 0.5em">
                            <div class=" text-center checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe"/>
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary main_btn">Log in</button>
                        </div>
                    </form>
                    <div class="row flex-column" style="margin-top: 1em">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="col text-center" style="margin-top: 1em;">
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <span class="login_txt">or </span><button type="submit" class="btn btn-primary sub_btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">Login with @provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    </div>
                    <div class="row flex-column">
                        <div class="col text-center">
                            <span class="login_txt">New here? </span><a class="login_link" asp-page="./CustomerInput" asp-route-returnUrl="@Model.ReturnUrl" asp-method="get">Register</a>
                        </div>
                        <div class="col text-center">
                            <a class="forgot_txt" id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
                        </div>
                        @* <p> *@
                        @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                        @* </p> *@
                    </div>
                </section>
            </div>
