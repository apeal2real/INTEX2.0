@{
    var recommendedIds = (List<INTEX2._0.Models.ProductRecommendation>)ViewBag.ProductRecommendations;
}

@model Products

<div class="container">
    <div class="row justify-content-center" style="margin-top: 5em;">
        <div class="col-md-1 d-flex justify-content-end">
            <a class="btn" asp-controller="Home" asp-action="Shop" style="height: 3em;">
                <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="3em" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
                </svg>
            </a>
        </div>
        <div class="col-md-4 d-flex justify-content-center" style="margin-top: 1em;">
            <img class="product_img_box" src="@Model.ImgLink" alt="Image of @Model.Name"/>
        </div>
        <div class="col-md-5">
            <h1 style="margin-right: 1em;">@Model.Name</h1>
            <p class="price_text">$@Model.Price.00</p>
            <p class="product_subtitle">@Model.ShortDescription</p>
            <form id="@Model.ProductId" method="post" asp-area="Cart" asp-page="/Cart" asp-route-productId="@Model.ProductId">
                <input name="quantity" class="product_input" type="number" step="1" value="1" min="1">
                <button type="submit" class="btn btn-primary main_btn">Add to Cart</button>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 5em;">
            @foreach (var recommendation in recommendedIds)
            {
                var filteredProducts = ((IEnumerable<Products>)ViewBag.Products)
                .Where(p => p.ProductId == recommendation.RecommendedId1 ||
                p.ProductId == recommendation.RecommendedId2 ||
                p.ProductId == recommendation.RecommendedId3);

                <div class="row justify-content-center">
                    <h1 class="title text-center">Recommended Products</h1>
                    @foreach (var product in filteredProducts)
                    {
                        <a class="product_box" asp-controller="Home" asp-action="Product" asp-route-id="@product.ProductId" style="text-decoration: none;">
                            <div class="product_img_box">
                                <img class="product_img" src="@product.ImgLink" />
                            </div>
                            <p class="product_name">@product.Name</p>
                            <p class="product_price">$@product.Price.00</p>
                        </a>
                    }
                    }
                </div>
            }
        </div>
    <div class="row flex-column">
        <div class="col-md-10 text-center" style="margin-top: 2em;">
            <button class="btn" onclick="toggleVisibility('descriptionSection', 'customerReviewsSection')">Description</button>
            <button class="btn" onclick="toggleVisibility('customerReviewsSection', 'descriptionSection')">Customer Reviews</button>
        </div>
        <div class="col-md-10 product_btn" id="descriptionSection">
            <p class="shop_text m-4" >@Model.Description</p>
        </div>
        <div class="col-md-10 product_btn" id="customerReviewsSection" hidden>
            @foreach (var r in ViewBag.Reviews)
            {
                <div class="row">
                    <div class="col-md-4">
                        <p class="shop_text m-4">
                            <span class="fw-bold">@r.FirstName @r.LastName</span>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="shop_text m-4">
                            @for (int i = 0; i < @r.Review; i++)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FFD700" class="bi bi-star-fill" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                            }
                            @for (int i = 0; i < (5 - @r.Review); i++)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z"/>
                                </svg>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function toggleVisibility(showId, hideId) {
        var showElement = document.getElementById(showId);
        var hideElement = document.getElementById(hideId);

        // Show the clicked section
        showElement.removeAttribute('hidden');

        // Hide the other section
        hideElement.setAttribute('hidden', '');
    }
</script>
