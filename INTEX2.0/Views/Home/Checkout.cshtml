@model Order
<div class="container">
    <div class="row justify-content-center">
        <div class="order_details_container">
            <h1 class="title text-center">Payment Info</h1>
        <form method="post" asp-controller="Home" asp-action="Checkout">
                <div class="form-group checkout_form">
                    <label asp-for="@Model.Date">Date:</label>
                    <input readonly asp-for="@Model.Date" value="@DateTime.Today.ToString("MM-dd-yyyy")" placeholder="@DateTime.Today.ToString("MM-dd-yyyy")" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.Amount">Total:</label>
                    <input readonly value="$@ViewBag.CartTotal.00" type="text" asp-for="@Model.Amount" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.TypeOfTransaction">Type of Transaction:</label>
                    <input readonly value="Online" type="text" asp-for="@Model.TypeOfTransaction" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.TypeOfCard">Type of Card:</label>
                    <input type="text" asp-for="@Model.TypeOfCard" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.EntryMode">Entry Mode:</label>
                    <input readonly value="CVC" type="text" asp-for="@Model.EntryMode" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.Bank">Bank:</label>
                    <input type="text" asp-for="@Model.Bank" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.CountryOfTransaction">Country of Transaction:</label>
                    <input type="text" asp-for="@Model.CountryOfTransaction" class="form-control">
                </div>
                <div class="form-group checkout_form">
                    <label asp-for="@Model.ShippingAddress">Shipping Address (Country):</label>
                    <input type="text" asp-for="@Model.ShippingAddress" class="form-control">
                </div>
                <div>
                    <input type="hidden" asp-for="@Model.DayOfWeek" value="@DateTime.Now.DayOfWeek">
                    <input type="hidden" asp-for="@Model.Time" value="@DateTime.Now.TimeOfDay.ToString(@"hh\:mm\:ss")" >
                </div>
                <button type="submit" class="btn btn-primary main_btn" style="margin-top: 1em;">Submit</button>
            </form>
        </div>
    </div>
</div>