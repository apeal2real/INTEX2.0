@{
    ViewBag.Title = "Shop";
}

<div class="container">
    <div class="row text-center">
        <h1 class="title">Products</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-2">
            <div class="search_bar" style="font-size: .75rem;">Search</div>
            <div class="filter_box">
                <form>
                    <div class="form-group">
                        <h1 class="filter_heading">Category</h1>
                        @foreach (var category in @ViewBag.Categories)
                        {
                            <input type="radio" id="@category.CategoryIdPk" name="@category.CategoryName" asp-value="@category.CategoryIdPk">
                            <label for="@category.CategoryIdPk">@category.CategoryName</label>
                            <br />
                        }
                    </div>
                    <div class="form-group">
                        <h1 class="filter_heading">Color</h1>
                        @foreach (var color in @ViewBag.Colors)
                        {
                            <input type="radio" id="@color" name="@color" asp-value="@color">
                            <label for="@color">@color</label>
                            <br />
                        }
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-primary main_btn">Filter</button>
                        <button class="btn btn-primary sub_btn">Reset</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                @foreach (var product in ViewBag.Products)
                {
                    <a class="product_box" asp-controller="Home" asp-action="Product">
                        <div class="product_img_box">
                            <img class="product_img" src="@product.ImgLink"/>
                        </div>
                        <p class="product_name">@product.Name</p>
                        <div class="row">
                            <div class="col">
                                <p class="product_price">$@product.Price.00</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>