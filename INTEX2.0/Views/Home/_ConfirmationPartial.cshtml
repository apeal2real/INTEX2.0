@using Microsoft.EntityFrameworkCore.Metadata.Internal

@model List<Products>
@{
    ViewBag.Title = "Confirmation";
}
<div class="container">
    <div class="row justify-content-center">
        <img src="~/img/intex_logo.png" alt="brick blocks logo" style="width: 50%; height: auto;"/>
    </div>
    <div class="row justify-content-center">
        <div class="order_details_container">
            <div class="row text-center">
                <h1 class="title">Order Confirmation</h1>
                <p class="product_subtitle">Order number @ViewBag.OrderNum is confirmed.</p>
            </div>
            @foreach (var p in Model)
            {
                <div class="row">
                    <img src="@p.ImgLink" alt="@p.Name image">
                    <h3>@p.Name</h3>
                </div>
            }
        </div>
        <form>
            <p>Rate the product (1 to 5)</p>
            <input placeholder="1" step="1" value="1"/>
        </form>
    </div>
</div>