@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}
@model UpdateUserViewModel

<div class="row">
    <h1 class="title text-center" style="margin-bottom: 1em;">Edit User</h1>
</div>
<div class="row justify-content-center">
    <div class="col-md-10 form_box">
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <form method="post" asp-controller="Admin" asp-action="AddUser">
            <!-- Hidden field to send the UserId along with the form submission -->
            <input type="hidden" asp-for="@Model.UserId"/>
            
            <div class="form-group">
                <label asp-for="@Model.Email">Email:</label>
                <input required type="text" asp-for="@Model.Email" class="form-control"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Dropdown for selecting role -->
                <label asp-for="@Model.RoleID">Role:</label><br>
                <select class="form-control" asp-for="@Model.RoleID" required>
                    @if (Model.RoleName == "Admin")
                    {
                        <option value="b76106b0-1485-4c14-8318-55391f160b0f">Admin</option>
                        <option value="0e3d6913-8080-4a1a-979f-b1fba0853ebe">User</option>
                    }
                    else
                    {
                        <option value="0e3d6913-8080-4a1a-979f-b1fba0853ebe">User</option>
                        <option value="b76106b0-1485-4c14-8318-55391f160b0f">Admin</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email">Password:</label>
                <input required type="text" class="form-control" asp-for="@Model.PasswordHash" value="@Model.PasswordHash" placeholder="Password">
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email">Phone Number:</label>
                <input class="form-control" type="text" asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" placeholder="Phone Number">
            </div>
            
            <div class="form-group" style="margin-top: 1em;">
                <button type="submit" class="btn btn-primary main_btn">Add</button>
                <a asp-action="Users" class="btn btn-secondary sub_btn">Back</a>
            </div>
            
            <!-- Display validation errors if any -->
            <div asp-validation-summary="All"></div>
        </form>
    </div>
   
</div>
