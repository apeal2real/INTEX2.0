@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}
@model UpdateUserViewModel
<div class="row">
    <h1 class="title text-center" style="margin-bottom: 1em;">Edit User</h1>
</div>
<div class="row justify-content-center">
    <div class="col-md-10 form_box">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-controller="Admin" asp-action="UpdateUser">
            <!-- Hidden field to send the UserId along with the form submission -->
            <input type="hidden" asp-for="@Model.UserId"/>

            <div class="form-group">
                <label asp-for="@Model.UserName">Username:</label>
                <input asp-for="@Model.UserName" class="form-control"/>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Dropdown for selecting role -->
                <label asp-for="@Model.RoleID">Role:</label><br>
                <select class="form-control" asp-for="@Model.RoleID" required>
                    @if (Model.RoleName == "Admin")
                    {
                        <option value="b76106b0-1485-4c14-8318-55391f160b0f">Admin</option>
                        <option value="0e3d6913-8080-4a1a-979f-b1fba0853ebe">User</option>
                    }
                    else
                    {
                        <option value="0e3d6913-8080-4a1a-979f-b1fba0853ebe">User</option>
                        <option value="b76106b0-1485-4c14-8318-55391f160b0f">Admin</option>
                    }
                </select><br><br>
            </div>

            <button type="submit" class="btn btn-primary main_btn">Submit</button>
            <a asp-action="Users" class="btn btn-secondary sub_btn">Back</a>

            <!-- Display validation errors if any -->
            <div asp-validation-summary="All"></div>
            @* <input type="hidden" asp-for="@Model.NormalizedUserName" value="@Model.NormalizedUserName" > *@
            @* <input type="hidden" asp-for="@Model.NormalizedEmail" value="@Model.NormalizedEmail" > *@
            @* <input type="hidden" asp-for="@Model.EmailConfirmed" value="@Model.EmailConfirmed" > *@
            @* <input type="hidden" asp-for="@Model.PasswordHash" value="@Model.PasswordHash" > *@
            @* <input type="hidden" asp-for="@Model.SecurityStamp" value="@Model.SecurityStamp" > *@
            @* <input type="hidden" asp-for="@Model.ConcurrencyStamp" value="@Model.ConcurrencyStamp" > *@
            @* <input type="hidden" asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" > *@
            @* <input type="hidden" asp-for="@Model.PhoneNumberConfirmed" value="@Model.PhoneNumberConfirmed" > *@
            @* <input type="hidden" asp-for="@Model.TwoFactorEnabled" value="@Model.TwoFactorEnabled" > *@
            @* <input type="hidden" asp-for="@Model.LockoutEnd" value="@Model.LockoutEnd" > *@
            @* <input type="hidden" asp-for="@Model.LockoutEnabled" value="@Model.LockoutEnabled" > *@
            @* <input type="hidden" asp-for="@Model.AccessFailedCount" value="@Model.AccessFailedCount" > *@
        </form>
    </div>
   
</div>
