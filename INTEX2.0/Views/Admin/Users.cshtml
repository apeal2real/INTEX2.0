@using INTEX2._0.Models
@{
    ViewBag.Title = "Users";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="title text-center" style="margin-bottom: 1em;">@ViewBag.Title</h1>
    </div>
    <div class="col-md-2">
        <a class="btn btn" asp-controller="Admin" asp-action="AddUser">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>
        </a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-10">
        <table class="table table-borderless">
            <thead class="thead_row">
            <tr>
                <th class="table_heading">Username</th>
                <th class="table_heading">Roles</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in ViewBag.Users)
            {
            <tr class="text-center">
                <td>@user.UserName</td>
                <td>@user.Name</td>
                <td>
                    <a class="btn btn-primary sub_btn" asp-controller="Admin" asp-action="UpdateUser" asp-route-id="@user.UserID">
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary warning_btn" asp-controller="Admin" asp-action="RemoveUser" asp-route-id="@user.UserID">
                        Delete
                    </a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>

